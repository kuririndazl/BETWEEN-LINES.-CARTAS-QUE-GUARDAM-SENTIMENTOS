        <form id="login" action="/login" method="POST">
            <h1 id="title">Login - Bem-vindo(a) de novo!</h1>
            <label for="email"><strong>E-mail:</strong></label>
            <input type="email" id="email" name="email" placeholder="Inserir E-mail"><br><br>

            <label for="password"><strong>Senha:</strong></label>
            <input type="password" id="password" name="password" placeholder="Inserir Senha"><br><br>
            <a id="esq_senha" href="#">Esqueci a minha senha</a>

            <div id="container_buttons">
                <button id="btn_login" type="submit">Entrar</button>
                <a href="/register" id="btn-cadastro"><strong>Fazer cadastro</strong></a>
            </div>
        </form>
        <div id="fundo_login">

        </div>
