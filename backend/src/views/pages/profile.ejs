<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil de <%= profile.username %> | CartaLenta</title>
    <%- include('../partials/head') %>
</head>
<body>
    <%- include('../partials/header') %>

    <main class="main-content-profile">
        <div class="profile-header">
            <div class="profile-photo-area">
                <img src="<%= profile.profilePictureUrl %>" alt="Foto de Perfil de <%= profile.username %>" class="profile-picture">
            </div>

            <div class="profile-info-area">
                <div class="info-top">
                    <h1><%= profile.username %></h1>
                    <a href="/profile/edit" class="btn-edit">Editar Perfil</a>
                
                    <small style="color:#aaa; font-size: 12px;">ID: <%= profile.user_id %></small>
                </div>

                <div class="profile-stats">
                    <div class="stat-item">
                        <strong>4</strong>
                        <span>posts</span>
                    </div>
                    <div class="stat-item">
                        <strong><%= stats.lettersSent %></strong>
                        <span>cartas enviadas</span>
                    </div>
                    <div class="stat-item">
                        <strong><%= stats.lettersReceived %></strong>
                        <span>cartas recebidas</span>
                    </div>
                </div>

                <!-- BIOGRAFIA -->
                <div class="profile-bio">
                    <p><%= profile.bio || 'Sem biografia ainda.' %></p>
                    <% 
                        const joinDate = new Date(profile.joinDate);
                        const formattedDate = joinDate.toLocaleDateString('pt-BR', { year: 'numeric', month: 'numeric', day: 'numeric' });
                    %>
                    <small>Membro desde: <%= formattedDate %></small>
                </div>
            </div>
        </div>

        <!-- NAVEGAÇÃO DE CONTEÚDO -->
        <div class="profile-nav">
            <div class="profile-nav-item active">
                <i class="fas fa-th"></i> Cartas Públicas
            </div>
            <div class="profile-nav-item">
                <i class="fas fa-inbox"></i> Arquivo (Privado)
            </div>
            <div class="profile-nav-item">
                <i class="fas fa-bookmark"></i> Salvos
            </div>
        </div>

        <div class="content-grid">
            <div class="content-item">
                <span>Carta 1</span>
            </div>
            <div class="content-item">
                <span>Carta 2</span>
            </div>
            <div class="content-item">
                <span>Carta 3</span>
            </div>
            <div class="content-item">
                <span>Carta 4</span>
            </div>
            <div class="content-item">
                <span>Carta 5</span>
            </div>
            <div class="content-item">
                <span>Carta 6</span>
            </div>
        </div>
    </main>

    <%- include('../partials/footer') %>
</body>
</html>